platform :ios, '10.0'
inhibit_all_warnings!
source 'https://mirrors.tuna.tsinghua.edu.cn/git/CocoaPods/Specs.git'

target 'WYBasisKit' do
  use_modular_headers!

  # 约束
  pod 'SnapKit'
  # 手机号验证(带国际码)
  pod 'libPhoneNumber-iOS'
  # 刷新
  pod 'MJRefresh'
  # JSON解析
  pod 'HandyJSON'
  # 图片加载、缓存
  pod 'Kingfisher'
  # 网络请求
  pod 'Moya'
  # 键盘弹出控制
  pod 'IQKeyboardManagerSwift'
  # 提示窗
  pod 'MBProgressHUD'
  # 防闪退
  pod 'AvoidCrash'
end
